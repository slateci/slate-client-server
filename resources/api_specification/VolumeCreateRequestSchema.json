{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "http://jsonschema.net",
  "required": true,
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": [ "v1alpha3" ]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "group": {
          "type": "string"
        },
        "cluster": {
          "type": "string"
        },
        "storageRequest": {
          "type": "string"
        },
        "accessMode": {
          "type": "string",
          "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany"]
        },
        "volumeMode": {
          "type": "string",
          "enum": ["Filesystem", "Block"]
        },
        "storageClass": {
          "type": "string"
        },
        "selectorMatchLabel": {
          "type": "string"
        },
        "selectorLabelExpressions": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "required": ["name","group","cluster"]
    }

  }
  
}
