{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "http://jsonschema.net",
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": [ "v1alpha3" ]
    },
    "kind": {
      "type": "string",
      "enum": [ "ApplicationInstance" ]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "application": {
          "type": "string"
        },
        "appVersion": {
          "type": "string"
        },
        "group": {
          "type": "string"
        },
        "cluster": {
          "type": "string"
        },
        "created": {
          "type": "string"
        },
        "configuration": {
          "type": "string"
        },
        "chartVersion": {
          "type": "string"
        }
      },
      "required": ["id","name","application","appVersion","group","cluster","created","configuration","chartVersion"]
    },
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "clusterIP": {
            "type": "string"
          },
          "externalIP": {
            "type": "string"
          },
          "ports": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        },
        "required": ["name","clusterIP","externalIP","ports","url"]
      }
    },
    "status": {
      "type": "object",
      "properties": {
        "phase": {
          "type": "string"
        }
      },
      "required": ["phase"]
    },
    "details": {
      "type": "object",
      "properties": {
        "pods": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "created": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "hostName": {
                "type": "string"
              },
              "hostIP": {
                "type": "string"
              },
              "status": {
                "type": "string"
              },
              "conditions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "lastTransitionTime": {
                      "type": "string"
                    },
                    "status": {
                      "type": "boolean"
                    },
                    "type": {
                      "type": "string"
                    }
                  },
                  "required": []
                }
              },
              "containers": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "image": {
                      "type": "string"
                    },
                    "imageID": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "ready": {
                      "type": "boolean"
                    },
                    "restartCount": {
                      "type": "number"
                    },
                    "state": {
                      "type": "object",
                      "properties": {
                        
                      },
                      "required": []
                    }
                  },
                  "required": []
                }
              },
              "events": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "count": {
                      "type": "number"
                    },
                    "firstTimestamp": {
                      "type": "string"
                    },
                    "lastTimestamp": {
                      "type": "string"
                    },
                    "reason": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  },
                  "required": []
                }
              }
            },
            "required": []
          }
        }
      },
      "required": ["pods"]
    }
  },
  "required": ["apiVersion","kind","metadata","services","status"]
}
