{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "http://jsonschema.net",
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": [
        "v1alpha3"
      ]
    },
    "kind": {
      "type": "string",
      "enum": [
        "Cluster"
      ]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "owningGroup": {
          "type": "string"
        },
        "owningOrganization": {
          "type": "string"
        },
        "location": {
          "type": "array",
          "items": {
            "type": "object",
          "properties": {
              "lat": {
                "type": "number"
              },
              "lon": {
                "type": "number"
              },
              "desc": {
                "type": "string"
              }
            },
            "required": [
              "lat",
              "lon"
            ]
          }
        },
        "hasMonitoring": {
          "type": "boolean"
        },
        "storageClasses": {
          "type": "array",
          "items": {
            "type": "object",
          "properties": {
              "name": {
                "type": "string"
              },
              "isDefault": {
                "type": "boolean"
              },
              "allowVolumeExpansion": {
                "type": "boolean"
              },
              "bindingMode": {
                "type": "string"
              },
              "reclaimPolicy": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "isDefault",
              "allowVolumeExpansion",
              "bindingMode",
              "reclaimPolicy"
            ]
          }
        },
        "priorityClasses": {
          "type": "array",
          "items": {
            "type": "object",
           "properties": {
              "name": {
                "type": "string"
              },
              "isDefault": {
                "type": "boolean"
              },
              "description": {
                "type": "string"
              },
              "priority": {
                "type": "number"
              }
            },
            "required": [
              "name",
              "isDefault",
              "description",
              "priority"
            ]
          }
        },
        "masterAddress": {
          "type": "string"
        },
        "nodes": {
          "type": "array",
          "items": {
            "type": "object",
          "properties": {
              "name": {
                "type": "string"
              },
              "addresses": {
                "type": "array",
                "items": {
                  "type": "object",
                "properties": {
                    "addressType": {
                      "type": "string",
                      "enum": [
                        "ExternalIP",
                        "InternalIP"
                      ]
                    },
                    "address": {
                      "type": "string"
                    },
                    "capacityCPU": {
                      "type": "string"
                    },
                    "capacityStorage": {
                      "type": "string"
                    },
                    "capacityHugepages1Gi": {
                      "type": "string"
                    },
                    "capacityHugepages2Mi": {
                      "type": "string"
                    },
                    "capacityMem": {
                      "type": "string"
                    },
                    "capacityPods": {
                      "type": "string"
                    },
                    "allocatableCPU": {
                      "type": "string"
                    },
                    "allocatableStorage": {
                      "type": "string"
                    },
                    "allocatableHugepages1Gi": {
                      "type": "string"
                    },
                    "allocatableHugepages2Mi": {
                      "type": "string"
                    },
                    "allocatableMem": {
                      "type": "string"
                    },
                    "allocatablePods": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "required": [
        "name",
        "id",
        "owningGroup",
        "owningOrganization",
        "location",
        "hasMonitoring",
        "storageClasses",
        "priorityClasses",
        "masterAddress"
      ]
    },
    "required": [
      "apiVersion",
      "kind",
      "metadata"
    ]
  }
}
