{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "http://jsonschema.net",
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": [ "v1alpha3" ]
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "apiVersion": {
            "type": "string",
            "enum": [ "v1alpha3" ]
          },
          "kind": {
            "type": "string",
            "enum": [ "Cluster" ]
          },
          "metadata": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
              },
              "id": {
                "type": "string",
              },
              "owningGroup": {
                "type": "string",
              },
              "owningOrganization": {
                "type": "string",
              },
              "location": {
              	"type": "array",
              	"items": {
                  "type": "object"
                  "items": {
                    "lat": {
                      "type": "number"
                    },
                    "lon": {
                      "type": "number"
                    },
                    "desc": {
                      "type": "string"
                    }
                  },
                  "required": ["lat","lon"]
                }
              },
              "hasMonitoring": {
                "type": "boolean"
              }
            },
            "required": ["name","id","owningGroup","owningOrganization","location","hasMonitoring"]
          }
        },
        "required": ["apiVersion","kind","metadata"]
      }
    }
  },
  "required": ["apiVersion","items"]
}
