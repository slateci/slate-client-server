{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "http://jsonschema.net",
  "required": true,
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": [ "v1alpha3" ]
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "apiVersion": {
            "type": "string",
            "enum": [ "v1alpha3" ]
          },
          "metadata": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "id": {
                "type": "string"
              },
              "created": {
                "type": "string"
              },
              "group": {
                "type": "string"
              },
              "cluster": {
                "type": "string"
              },
              "storageRequest": {
                "type": "string"
              },
              "storageClass": {
                "type": "string"
              },
              "accessMode": {
                "type": "string",
                "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany"]
              },
              "volumeMode": {
                "type": "string",
                "enum": ["Filesystem", "Block"]
              }
            },
            "required": ["name","id","cluster","group","created", "storageClass"]
          }
        },
        "required": ["apiVersion","kind","metadata"]
      }
    }
  },
  "required": ["apiVersion","items"]
}
